@{
    ViewData["Title"] = "Genel Durum İzleme";
}

<div class="container-fluid mt-4">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase mb-2" style="font-size: 0.8rem;">Toplam Personel</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.ToplamPersonel</h2>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-warning text-dark">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase mb-2" style="font-size: 0.8rem;">Bekleyen Siparişler</h6>
                            <h2 class="mb-0 fw-bold">@ViewBag.BekleyenSiparisler</h2>
                        </div>
                        <i class="fas fa-truck-loading fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-info text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-uppercase mb-2" style="font-size: 0.8rem;">Bekleyen Raporlar</h6>
                            <h2 class="mb-0 fw-bold">0</h2>
                        </div>
                        <i class="fas fa-file-alt fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center p-5 bg-white rounded shadow-sm border">
        <i class="fas fa-shield-alt fa-4x text-muted mb-3"></i>
        <h4 class="text-secondary">Denetleme ve Gözlem Paneli</h4>
        <p class="text-muted">Buradan fabrikanın genel işleyişini ve departman performanslarını takip edebilirsiniz.</p>
    </div>
</div>
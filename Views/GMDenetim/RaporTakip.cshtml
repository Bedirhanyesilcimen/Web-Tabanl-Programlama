@model List<WorkFlowApp.Models.RaporTalebi>

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i> Rapor Talepleri Takip Paneli</h5>
            <a asp-action="RaporTalepEt" class="btn btn-light btn-sm fw-bold">Yeni Talep Ekle</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Başlık</th>
                        <th>Hedef Birim</th>
                        <th>Son Tarih</th>
                        <th>Durum</th>
                        <th>Oluşturan</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Baslik</td>
                            <td><span class="badge bg-secondary">@item.HedefRol</span></td>
                            <td>@item.SonTarih.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (item.Durum == "Tamamlandı")
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Tamamlandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="fas fa-clock"></i> @item.Durum</span>
                                }
                            </td>
                            <td class="text-muted small">@item.TalepEden</td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">Henüz oluşturulmuş bir rapor talebi bulunmuyor.</div>
            }
        </div>
    </div>
</div>
@model WorkFlowApp.Models.AppUser
@{ ViewData["Title"] = "Personel Düzenle"; }

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i> Personel Düzenle: @Model.FullName</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Kullanıcı Adı</label>
                        <input asp-for="Username" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Şifre</label>
                        <input asp-for="Password" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Ad Soyad</label>
                        <input asp-for="FullName" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Yetki Rolü</label>
                        <select asp-for="Role" class="form-select">
                            <option value="Admin">Admin</option>
                            <option value="Personel">Personel</option>
                        </select>
                    </div>
                </div>
                <hr />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">İptal</a>
                    <button type="submit" class="btn btn-primary px-4">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
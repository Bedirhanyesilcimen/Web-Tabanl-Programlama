@model IEnumerable<WorkFlowApp.Models.Employee>

<h2>Personel Listesi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Personel Ekle</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Telefon</th>
            <th>Maaş</th>
            <th>Departman</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Phone</td>
            <td>@item.Salary.ToString("C2")</td> <td>
                @if(item.Department != null)
                {
                    <span class="badge bg-info text-dark">@item.Department.Name</span>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td>
                <button class="btn btn-sm btn-warning">Düzenle</button>
                <button class="btn btn-sm btn-danger">Sil</button>
            </td>
        </tr>
}
    </tbody>
</table>
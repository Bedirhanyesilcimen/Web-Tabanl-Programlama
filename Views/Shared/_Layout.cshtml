<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aynen Eldiven ERP - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        html, body { height: 100%; margin: 0; background-color: #f4f6f9; font-family: 'Segoe UI', sans-serif; }
        #wrapper { display: flex; min-height: 100vh; width: 100%; }
        
        #sidebar-wrapper { 
            width: 250px; 
            background-color: #212529; 
            color: #adb5bd; 
            flex-shrink: 0; 
            display: flex;
            flex-direction: column;
        }
        
        .sidebar-heading { 
            padding: 1.5rem 1.25rem; 
            font-size: 1.25rem; 
            font-weight: bold; 
            color: white; 
            border-bottom: 1px solid #3d4145; 
        }

        .nav-link { 
            color: #adb5bd; 
            padding: 12px 20px; 
            display: flex; 
            align-items: center; 
            text-decoration: none; 
            transition: 0.2s; 
        }
        .nav-link:hover { background-color: #343a40; color: white; }
        .nav-link i { width: 25px; text-align: center; margin-right: 10px; }
        
        #page-content-wrapper { flex-grow: 1; overflow-y: auto; background-color: #f4f6f9; }
        .menu-label { font-size: 0.7rem; text-transform: uppercase; color: #6c757d; padding: 15px 20px 5px; font-weight: bold; }
        .collapse-inner { background-color: #2c3034; margin: 0 10px; border-radius: 5px; }
        .navbar { box-shadow: 0 .125rem .25rem rgba(0,0,0,.075); border-bottom: 1px solid #dee2e6; }
    </style>
</head>
<body>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading"><i class="fas fa-cubes text-primary"></i> Aynen Eldiven ERP</div>
            
            <div class="list-group list-group-flush">
                <a class="nav-link" href="/Home/Index"><i class="fas fa-home"></i> Ana Sayfa</a>

                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur"))
                {
                    <div class="menu-label text-info">Denetleme & Rapor</div>
                    <a class="nav-link" href="/GMDenetim/Index"><i class="fas fa-chart-line text-info"></i> <span>Genel Durum</span></a>
                    <a class="nav-link" href="/GMDenetim/RaporTakip"><i class="fas fa-file-contract"></i> <span>Rapor Takibi</span></a>
                    <a class="nav-link text-warning" href="/Personel/Index"><i class="fas fa-users-cog"></i> <span>Personel Yönetimi</span></a>
                }

            
                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Depo") || User.IsInRole("Tekstil") || User.IsInRole("Kaplama"))
                {
                    <div class="menu-label">Lojistik</div>
                    <a class="nav-link justify-content-between collapsed" data-bs-toggle="collapse" data-bs-target="#depoMenu" aria-expanded="false" href="javascript:void(0)">
                        <span><i class="fas fa-warehouse text-info"></i> Depo Yönetimi</span>
                        <i class="fas fa-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="depoMenu">
                        <div class="collapse-inner border-start border-info border-2 ms-3">
                            @* Hammadde stoklarını üretimciler de görebilir *@
                            <a class="nav-link" href="/Depo/TekstilPamuklu">Pamuklu Stok</a>
                            <a class="nav-link" href="/Depo/TekstilSentetik">Sentetik Stok</a>
                            
                            @* Mamul ve Paketleme sadece yetkili birimlere *@
                            @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Depo") || User.IsInRole("Pazarlama"))
                            {
                                <a class="nav-link" href="/Depo/Mamul">Mamul Stok</a>
                                <a class="nav-link" href="/Depo/Paketleme">Paketleme</a>
                            }
                        </div>
                    </div>
                }

                @* SİPARİŞ & SATIN ALMA*@
                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Muhasebe") || User.IsInRole("Pazarlama") || User.IsInRole("Depo"))
                {
                    <div class="menu-label text-success">Sipariş & Satın Alma</div>
                    @if (!User.IsInRole("GenelMudur") && !User.IsInRole("Depo"))
                    {
                        <a class="nav-link" href="/Siparis/SiparisVer"><i class="fas fa-plus-circle text-success"></i> <span>Sipariş Oluştur</span></a>
                    }
                    <a class="nav-link" href="/Siparis/BekleyenSiparisler"><i class="fas fa-history text-info"></i> <span>Sipariş Takip</span></a>
                }

                <div class="menu-label">Operasyonel</div>
                
                @* TEKSTİL ÜRETİM *@
                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Tekstil"))
                {
                    <a class="nav-link" href="/Tekstil/Index"><i class="fas fa-industry text-primary"></i> <span>Tekstil Üretim</span></a>
                }

                @* KAPLAMA *@
                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Kaplama"))
                {
                    <a class="nav-link" href="/Kaplama/Index"><i class="fas fa-fill-drip text-danger"></i> <span>Kaplama</span></a>
                }

                @* PAZARLAMA *@
                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Pazarlama"))
                {
                    <a class="nav-link" href="/Pazarlama/Index"><i class="fas fa-chart-bar text-success"></i> <span>Pazarlama</span></a>
                }

                @* MUHASEBE *@
                @if (User.IsInRole("Admin") || User.IsInRole("GenelMudur") || User.IsInRole("Muhasebe"))
                {
                    <a class="nav-link" href="/Muhasebe/Index"><i class="fas fa-file-invoice-dollar text-primary"></i> <span>Muhasebe</span></a>
                }

                <div class="mt-auto border-top border-secondary">
                    <a class="nav-link text-danger fw-bold" href="/Account/Logout"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
                </div>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-white px-4 py-3">
                <div class="container-fluid p-0">
                    <span class="navbar-brand mb-0 h1 text-secondary"><i class="fas fa-th-large me-2"></i> @ViewData["Title"]</span>
                    <div class="ms-auto d-flex align-items-center">
                        <div class="badge bg-light text-dark border p-2">
                            <i class="fas fa-user-circle me-1 text-primary"></i> @(User.Identity?.Name ?? "Misafir")
                        </div>
                    </div>
                </div>
            </nav>
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

@model WorkFlowApp.Models.PazarlamaViewModel
@if (User.IsInRole("GenelMudur"))
{
    <div class="alert alert-info border-0 shadow-sm d-flex align-items-center mb-4">
        <i class="fas fa-search fa-2x me-3"></i>
        <div>
            <strong class="d-block">Genel Müdür - Denetleme Modu</strong>
            <span class="small">Verileri inceleyebilir ve rapor talep edebilirsiniz. Veri girişi yetkiniz kısıtlanmıştır.</span>
        </div>
    </div>
}

<div class="mt-3">
    @if (!User.IsInRole("GenelMudur"))
    {
        <button type="submit" class="btn btn-success">Verileri Kaydet</button>
    }
</div>

@{
    ViewData["Title"] = "Pazarlama ve Satış";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Toplam Ciro</h5>
                        <h2 class="mb-0">@Model.ToplamCiro.ToString("C2")</h2>
                    </div>
                    <i class="fas fa-wallet fa-3x opacity-50"></i>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 font-weight-bold text-primary">Müşteri Siparişleri</h6>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Durum</th>
                                <th>Müşteri</th>
                                <th>Ürün</th>
                                <th>Adet</th>
                                <th>Tutar</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.Siparisler)
                            {
                                <tr>
                                    <td>
                                        @if(item.Tamamlandi) 
                                        { <span class="badge bg-success">Tamamlandı</span> }
                                        else 
                                        { <span class="badge bg-warning text-dark">Bekliyor</span> }
                                    </td>
                                    <td class="fw-bold">@item.MusteriAdi</td>
                                    <td>@item.UrunAdi</td>
                                    <td>@item.Adet</td>
                                    <td>@((item.Adet * item.BirimFiyat).ToString("C2"))</td>
                                    <td>
                                        @if(!item.Tamamlandi)
                                        {
                                            <a href="/Pazarlama/Tamamla/@item.Id" class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-check"></i> Tamamla
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    Yeni Sipariş Girişi
                </div>
                <div class="card-body">
                    <form action="/Pazarlama/SiparisEkle" method="post">
                        <div class="mb-3">
                            <label>Müşteri Adı</label>
                            <input type="text" name="musteri" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label>Ürün</label>
                            <input type="text" name="urun" class="form-control" required>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label>Adet</label>
                                <input type="number" name="adet" class="form-control" required>
                            </div>
                            <div class="col-6 mb-3">
                                <label>Birim Fiyat</label>
                                <input type="number" step="0.01" name="fiyat" class="form-control" required>
                            </div>
                        </div>
                        <button class="btn btn-success w-100">Siparişi Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
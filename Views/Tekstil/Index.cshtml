@model WorkFlowApp.Models.TekstilViewModel
@{
    ViewData["Title"] = "Tekstil Üretim Parkuru";
    bool isGM = User.IsInRole("GenelMudur");
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-industry text-primary"></i> Tekstil Üretim Parkuru</h2>
        
        <div class="d-flex gap-2">
            <input type="text" id="makineSearch" class="form-control" placeholder="Makine veya Model ara..." onkeyup="tabloFiltrele('makineSearch')">
            
            @if (!isGM)
            {
                <button class="btn btn-primary text-nowrap"><i class="fa fa-plus"></i> Günlük Üretim Gir</button>
            }
            else
            {
                <span class="badge bg-info text-dark d-flex align-items-center px-3"><i class="fas fa-eye me-2"></i> GM İZLEME MODU</span>
            }
        </div>
    </div>

    <div class="row mb-4" id="makineCards">
        @if(Model.Makineler.Count == 0)
        {
            <div class="alert alert-warning ms-3">Sistemde kayıtlı makine yok.</div>
        }
        
        @foreach (var makine in Model.Makineler)
        {
            string renk = makine.Durum switch {
                "AKTİF" => "bg-success",
                "ARIZALI" => "bg-danger",
                "BAKIMDA" => "bg-warning text-dark",
                _ => "bg-secondary"
            };

            <div class="col-md-3 mb-3 makine-item">
                <div class="card @renk text-white shadow h-100 border-0">
                    <div class="card-body text-center">
                        <h4 class="fw-bold mb-0">@makine.MakineKodu</h4>
                        <small class="opacity-75">@makine.Model</small>
                        <hr class="my-2 opacity-25">
                        <span class="badge bg-light text-dark fw-bold">@makine.Durum</span>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-secondary fw-bold"><i class="fa-solid fa-list me-2"></i> Son Üretim Kayıtları</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="uretimTablo">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>Makine</th>
                            <th>Vardiya</th>
                            <th>Model</th>
                            <th>Üretim (Çift)</th>
                            <th>Fire</th>
                            <th>Operatör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Uretimler)
                        {
                            <tr>
                                <td>@item.Tarih.ToShortDateString()</td>
                                <td><span class="badge bg-info text-dark">@item.MakineNo</span></td>
                                <td>@item.Vardiya</td>
                                <td>@item.UrunModeli</td>
                                <td class="fw-bold">@item.UretilenCift</td>
                                <td class="text-danger fw-bold">@item.FireAdet</td>
                                <td>@item.Operator</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function tabloFiltrele(inputId) {
        var filter = document.getElementById(inputId).value.toUpperCase();
        document.querySelectorAll("#uretimTablo tbody tr").forEach(row => {
            row.style.display = row.innerText.toUpperCase().includes(filter) ? "" : "none";
        });
        document.querySelectorAll(".makine-item").forEach(card => {
            card.style.display = card.innerText.toUpperCase().includes(filter) ? "" : "none";
        });
    }
</script>

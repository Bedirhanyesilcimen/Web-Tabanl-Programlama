@model WorkFlowApp.Models.SatinalmaTalep
@{
    ViewData["Title"] = "Yeni Sipariş Oluştur";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-cart-plus me-2"></i> Yeni Sipariş Talebi Oluştur</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="SiparisVer" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Ürün Adı / Malzeme</label>
                            <input asp-for="UrunAdi" class="form-control" placeholder="Örn: 10 Numara İplik" required />
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Miktar</label>
                                <input asp-for="Miktar" type="number" class="form-control" required min="1" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Birim</label>
                                <select asp-for="Birim" class="form-select">
                                    <option value="Adet">Adet</option>
                                    <option value="Kg">Kg</option>
                                    <option value="Metre">Metre</option>
                                    <option value="Koli">Koli</option>
                                    <option value="Çuval">Çuval</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Açıklama / Not (Opsiyonel)</label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Siparişle ilgili notunuz..."></textarea>
                        </div>

                        <hr />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success fw-bold py-2">
                                <i class="fas fa-paper-plane me-2"></i> Talebi Gönder
                            </button>
                            <a asp-action="BekleyenSiparisler" class="btn btn-light text-secondary">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>